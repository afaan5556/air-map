
<div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Auction Details For: <%= @active_auction.name %></span>
            </div>
                <ul class="collection">
                  <li class="collection-item">Item Name: <%= @active_auction.name %></li>
                  <li class="collection-item">Item Price: <%= @active_auction.price %></li>
                  <li class="collection-item">Item Description: <%= @active_auction.description %></li>
                  <li class="collection-item">Auction Start: <%= @active_auction.start %></li>
                  <li class="collection-item">Auction Stop: <%= @active_auction.stop %></li>
                </ul>

         </div>
       </div>
</div>


<div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Bid on this Auction</span>
            </div>
                <ul class="collection">
                  <li class="collection-item">Current Bids: <%= @active_auction.bids.length %></li>
                  <li class="collection-item">

                    <div id="bid_form" class="row">
                      <form class="col s12" method="post" action="/auctions/<%= @active_auction.id %>">
                        <div class="row">
                          <div class="input-field col s6">
                            <input name="amount" type="text" class="validate">
                            <label for="user_name">Enter Bid Amount</label>
                          </div>
                        </div>
                        <input type="submit" class="waves-effect waves-light btn" value="Place Bid">
                      </form>
                    </div>


                  </li>

                </ul>

         </div>
       </div>
</div>
