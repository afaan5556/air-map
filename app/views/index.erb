<div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Welcome to DBC Auction</span>
              <% if !current_user  %>
              <p>Use the links above to login or sign up.</p>
            </div>
            <div class="card-action">
              <div class="card-image">
                <img src="/pexels-photo-89907.jpeg">
              </div>
            </div>
              <% end %>
              <% if current_user %>
                <h4>Successful Login!</h4>
              <% end %>
          </div>
        </div>


        <% if current_user %>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Active Auctions:</span>
            </div>

          <ul class="collection">
            <% @active_auctions.each do |active_auction| %>
              <a href="/auctions/<%= active_auction.id %>"><li class="collection-item"><%= active_auction.name %>
              </li></a>
            <% end %>
          </ul>

         </div>
       </div>
       <% end %>


      </div>
