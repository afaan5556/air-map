
<div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Auction Details For: <%= @auction.name %></span>
            </div>
                <ul class="collection">
                  <li class="collection-item">Item Name: <%= @auction.name %></li>
                  <li class="collection-item">Item Price: <%= @auction.price %></li>
                  <li class="collection-item">Item Description: <%= @auction.description %></li>
                  <li class="collection-item">Auction Start: <%= @auction.start %></li>
                  <li class="collection-item">Auction Stop: <%= @auction.stop %></li>
                </ul>

         </div>
       </div>
</div>

<div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Bid on this Auction</span>
            </div>
                <ul class="collection">
                  <li class="collection-item">Current Bids: <%= @auction.bids.length %></li>
                  <li class="collection-item">

                    <div class="row">
                      <form class="col s12" method="post" action="/users/new">
                        <div class="row">
                          <div class="input-field col s6">
                            <input name="user_name" type="text" class="validate">
                            <label for="user_name">Enter Bid Amount</label>
                          </div>
                        </div>

                        <input type="submit" class="waves-effect waves-light btn" value="Place Bid">

                      </form>
                    </div>


                  </li>

                </ul>

         </div>
       </div>
</div>
