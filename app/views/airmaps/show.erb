<div class="row">
  <div class="col s6">
    <div class="card #3949ab indigo darken-1">
      <div class="card-content white-text">

        <i class="large material-icons">location_on</i>
        <h4>Your airMap address geocodes to:</h4>
        <span class="card-title">Latitude: <%= @lat %>  |  Longitude: <%= @lon %></span>
        </div>
      </div>
    </div>
  <div class="col s6">
    <div class="card #5e35b1 deep-purple">
      <div class="card-content white-text">

      <i class="large material-icons">announcement</i>
      <h4>Dominant Pollutant</h4>
      <span class="card-title"><%= @report.dominant_pollutant_description %></span>
      </div>
    </div>
  </div>
</div>


<div class="row">

  <div class="col s6">
    <div class="card #3949ab indigo darken-1">
      <div class="card-content white-text">

      <i class="large material-icons">report_problem</i>
      <h4>Advisory Messages:</h4>
      <span class="card-title">
        <ul class="collection">
          <li class="collection-item black-text">Sport: <%= @report.children %></li>
          <li class="collection-item black-text">Health: <%= @report.sport %></li>
          <li class="collection-item black-text">Inside: <%= @report.health %></li>
          <li class="collection-item black-text">Outside: <%= @report.inside %></li>
          <li class="collection-item black-text">Outside: <%= @report.outside %></li>
        </ul>
      </span>
      </div>
    </div>
  </div>

  <div class="col s6">
    <div class="card #5e35b1 deep-purple">
      <div class="card-content white-text">

      <i class="large material-icons">perm_phone_msg</i>
      <h4>Pollutant Information:</h4>
      <span class="card-title">
        <ul class="collection">
          <li class="collection-item black-text">Primary Source: <%= @report.main %></li>
          <li class="collection-item black-text">Primary Source: <%= @report.effects %></li>
          <li class="collection-item black-text">Primary Source: <%= @report.causes %></li>
          <li class="collection-item black-text">Other: ________</li>
          <li class="collection-item black-text">Other: ________</li>
        </ul>
      </span>
      </div>
    </div>
  </div>
</div>
