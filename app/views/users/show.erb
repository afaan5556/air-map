
<div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Profile page for: <%= @user.user_name.capitalize %></span>
            </div>
         </div>
       </div>

       <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">My Auctions:</span>
            </div>

          <ul class="collection">
            <% @user.auctions.each do |auction| %>
              <a href="/users/<%= @user.id %>/auctions/<%= auction.id %>"><li class="collection-item"><%= auction.name %>

              <a href="/users/<%= @user.id %>/auctions/<%= auction.id %>/edit" class="secondary-content"><i class="material-icons">Edit Auction</i></a><br>

              <form method="post" action="/users/<%= @user.id %>/auctions/<%= auction.id %>">
                <input name="_method" type="hidden" value="delete"/>
                  <a data-method="delete" href="/users/<%= @user.id %>/auctions/<%= auction.id %>" class="secondary-content"><i class="material-icons">Delete Auction</i></a><br>
              </form>

              </li></a>


            <% end %>
          </ul>


        <a href="/users/<%= @user.id %>/auctions/new" class="waves-effect waves-light btn">+ Add Auction</a>
         </div>
       </div>


       <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">My Bids:</span>
            </div>

          <ul class="collection">
            <% @user.bids.each do |bid| %>
              <a href=""><li class="collection-item">Bid ID: <%= bid.id %>

              </li></a>


            <% end %>
          </ul>




