
<div class="row">
  <div class="col s12 m12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Profile page for: <%= @user.user_name.capitalize %></span>
      </div>
     </div>
   </div>


<div class="col s4">
  <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">My airMaps:</span>
            </div>

          <ul class="collection">
            <% @user.airmaps.each do |airmap| %>
              <li class="collection-item">airMap ID: <%= airmap.id %></li>
            <% end %>
          </ul>

        <a href="/users/<%= @user.id %>/airmaps/new" class="waves-effect waves-light btn">+ Add airMap</a>
 </div>
</div>
</div>
