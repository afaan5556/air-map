<div class="row">
  <div class="col s3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Sign Up</span>
        <p>Enter your credentials below to Sign Up.</p>
      </div>

    </div>
  </div>
</div>
  <div class="row">
    <form class="col s3" method="post" action="/users/new">
      <div class="row">
        <div class="input-field">
          <input name="user_name" type="text" class="validate">
          <label for="user_name">User Name</label>
        </div>
      </div>

      <div class="row">
      <div class="row">
        <div class="input-field">
          <input name="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
        <div class="input-field">
          <input name="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <input type="submit" class="waves-effect waves-light btn" value="Sign Up">

    </form>
  </div>
